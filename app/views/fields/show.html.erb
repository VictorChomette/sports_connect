<div class="d-flex p-5 flex-column shadow-lg p-3 ">
  <h1><%= @field.name %></h1>
  <h4><%= @field.address %></h4>
</div>

<div class="container d-flex my-4 p-5 flex-column shadow-lg p-3 ">
  <h2>Details:</h2>
  <p><%= @field.description %></p>
  <p><strong>Type: </strong><%= @field.field_type %> </p>
  <p><strong> Status: </strong><%= @field.status %> </p>
</div>

<hr class="my-5">
  <div class="row">
    <div class="col-12 col-sm-6">
      <h3>Reviews</h3>
      <% if @field.reviews.empty? %>
        <small><em class="text-muted">Be the first one to review this list</em></small>
      <% end %>
      <% @field.reviews.each do |review| %>
        <div>
          <% review.rating.times do %>
            <i class="fas fa-star star-yellow"></i>
          <% end %>
          <small><em class="text-muted"><%= distance_of_time_in_words_to_now(review.created_at) %> ago</em></small>
          <p class="mb-0"><%= review.comment %></p>
          <%= link_to "destroy", review_path(review), method: :delete %>
        </div>
        <hr>
      <% end %>
    </div>
    <div class="col-12 col-sm-6">
      <div class="bg-white rounded p-3">
        <h5>Add your review</h5>
        <%= simple_form_for [@field, @review] do |f| %>
          <%= f.input :comment, placeholder: "Add your review here..." %>
          <%= f.input :rating, as: :select, collection: (1..5), required: true, prompt: "What's your rating", input_html: { data: { controller: "jquery-bar-rating" } } %>
          <%= f.submit class:"btn btn-flat" %>
        <% end %>
      </div>
    </div>

<div class="container my-5 shadow p-3">
  <div class="rounded", style="width: 100%; height: 600px;"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
